@model OceanOdyssey.Application.DTOs.HabitacionDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Detalle de la habitacion</h1>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Información del Barco</h3>
        </div>
        <div class="card-body">

            <dl class="row">
                <div class="col">
                <dt class="col-sm-3 font-weight-bold">Nombre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 font-weight-bold">Capacidad Maxima:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CapacidadMaxima) Personas</dd>

                <dt class="col-sm-3 font-weight-bold">Capacidad Minima:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CapacidadMinima) Personas</dd>

                <dt class="col-sm-3 font-weight-bold">Tamaño:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tamanno)m2</dd>
                </div>
                <div class="col">
                    <dt class="col-sm-3 font-weight-bold">Descripcion:</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Detalles)</dd>
                </div>
            </dl>
        </div>
    </div>
    <div class="text-center my-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">Volver a la lista</a>
    </div>
</div>
