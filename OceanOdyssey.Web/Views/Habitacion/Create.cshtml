@model OceanOdyssey.Application.DTOs.HabitacionDTO

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary text-center">Crear Nueva Habitacion</h2>
    <hr />
    <div class="row justify-content-center">
            <!-- Aumentamos el ancho aquí -->
            <form asp-action="Create" class="p-5 border rounded shadow-lg bg-light" enctype="multipart/form-data" data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-begin="onBegin"
                  data-ajax-failure="onFailure"
                  data-ajax-success="onSuccess"
                  data-ajax-complete="onComplete">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="control-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" id="Nombre" placeholder="Digite el nombre de la nueva habitacion " />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <input type="hidden" id="HabitacionId" value="@((Model?.Id ?? 0) > 0 ? Model.Id : "")" />

                <div class="form-group mb-3">
                    <label asp-for="Detalles" class="control-label fw-bold"></label>
                    <input asp-for="Detalles" class="form-control" id="Detalles" placeholder="Ingrese la descripcion " />
                    <span asp-validation-for="Detalles" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CapacidadMaxima" class="control-label fw-bold"></label>
                    <input asp-for="CapacidadMaxima" class="form-control" id="CapacidadMaxima" placeholder="Capacidad Maxima " />
                    <span asp-validation-for="CapacidadMaxima" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CapacidadMinima" class="control-label fw-bold"></label>
                    <input asp-for="CapacidadMinima" class="form-control" id="CapacidadMinima" placeholder="Capacidad Minima " />
                    <span asp-validation-for="CapacidadMinima" class="text-danger"></span>
                    <div class="form-group mb-3">
                        <label asp-for="Tamanno" class="control-label fw-bold"></label>
                        <input asp-for="Tamanno" class="form-control" id="Tamanno" placeholder="Tamaño " />
                        <span asp-validation-for="Tamanno" class="text-danger"></span>
                    </div>
                </div>
               

                
                <button type="submit" class="btn btn-primary w-100 mt-3 p-2">Crear</button>
            </form>
        
    </div>
</div>
<div class="text-center mt-4">
    <a asp-action="IndexAdmin" class="btn btn-outline-dark">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let form = document.querySelector("form");
            let maxInput = document.getElementById("CapacidadMaxima");
            let minInput = document.getElementById("CapacidadMinima");

            form.addEventListener("submit", function (event) {
                let max = parseInt(maxInput.value, 10);
                let min = parseInt(minInput.value, 10);

                if (max < min) {
                    event.preventDefault(); // Evita que se envíe el formulario
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "La capacidad máxima no puede ser menor a la mínima."
                    });
                }
            });
        });
    </script>

    <script>
       

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" ></script>
    <script>
        $(document).ready(function () {
        @if (!string.IsNullOrEmpty(ViewBag.NotificationMessage))
        {
                    <p style="color: red;" > Mensaje desde ViewBag: @ViewBag.NotificationMessage</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.NotificationMessage))
        {
            <text>
                    Swal.fire({
                        icon: "success",
                        title: "¡Éxito!",
                        text: "@ViewBag.NotificationMessage"
                    });
            </text>
        }
                });
    </script>

        </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



}
