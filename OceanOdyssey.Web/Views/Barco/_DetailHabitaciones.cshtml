@model IEnumerable<OceanOdyssey.Application.DTOs.BarcoHabitacionDTO>

<div id="myCard">
    <div class="card">
        <div class="card-header">
           Habitaciones agregadas
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered text-center" id="detalleHabitaciones">
                    <thead>
                        <tr>
                            <th>Nombre de la Habitación</th>
                            <th>Cantidad de Habitaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                if (item?.IdhabitacionNavigation != null)
                                {
                                    <tr id="row-@item.Idhabitacion">
                                        <td>@item.IdhabitacionNavigation.Nombre</td>
                                        <td>@item.Cantidad</td>
                                        <td align="right">
                                            <button type="button" class="btn btn-danger" onclick="deleteLibro(@item.Idhabitacion)">Eliminar</button>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2">No hay habitaciones agregadas</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
