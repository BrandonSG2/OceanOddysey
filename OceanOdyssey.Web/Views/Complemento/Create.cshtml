@model OceanOdyssey.Application.DTOs.ComplementoDTO

@{
    ViewData["Title"] = "Create";
}
<div class="container mt-4">
    <h2 class="mb-4 text-primary text-center">Crear Nuevo Complemento</h2>
    <hr />
    <div class="row justify-content-center">
        <!-- Aumentamos el ancho aquí -->
        <form asp-action="Create" class="p-5 border rounded shadow-lg bg-light" enctype="multipart/form-data" data-ajax="true"
              data-ajax-method="POST"
              data-ajax-begin="onBegin"
              data-ajax-failure="onFailure"
              data-ajax-success="onSuccess"
              data-ajax-complete="onComplete">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="control-label fw-bold"></label>
                <input asp-for="Nombre" class="form-control" id="Nombre" placeholder="Digite el nombre del nuevo complemento " />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <input type="hidden" id="HabitacionId" value="@((Model?.Id ?? 0) > 0 ? Model.Id : "")" />

            <div class="form-group mb-3">
                <label asp-for="Detalle" class="control-label fw-bold"></label>
                <input asp-for="Detalle" class="form-control" id="Detalles" placeholder="Ingrese el detalle " />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Precio" class="control-label fw-bold"></label>
                <input asp-for="Precio" class="form-control" id="CapacidadMinima" placeholder="Precio " />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Aplicado" class="control-label fw-bold"></label>
                <select asp-for="Aplicado" class="form-control">
                    <option value="">-- Seleccione --</option>
                    <option value="Habitacion">Habitación</option>
                    <option value="Pasajero">Pasajero</option>
                </select>
                <span asp-validation-for="Aplicado" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3 p-2">Crear</button>
        </form>

    </div>
</div>
<div class="text-center mt-4">
    <a asp-action="IndexAdmin" class="btn btn-outline-dark">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    

    <script>


        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" ></script>
    <script>
        $(document).ready(function () {
        @if (!string.IsNullOrEmpty(ViewBag.NotificationMessage))
        {
                    <p style="color: red;" > Mensaje desde ViewBag: @ViewBag.NotificationMessage</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.NotificationMessage))
        {
            <text>
                    Swal.fire({
                        icon: "success",
                        title: "¡Éxito!",
                        text: "@ViewBag.NotificationMessage"
                    });
            </text>
        }
                    });
    </script>

            </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



}